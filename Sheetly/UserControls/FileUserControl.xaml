<UserControl x:Class="Sheetly.UserControls.FileUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:Sheetly.UserControls"
             mc:Ignorable="d" >
    <StackPanel Orientation="Vertical" Background="White">
        <uc:EditableTextBlock Value="{Binding Name}" Width="200" FontSize="18" EditMode="Text"/>
        <uc:EditableTextBlock Value="{Binding Delimiter}" Width="200" FontSize="18" EditMode="Text"/>
        <uc:EditableTextBlock Value="{Binding Column}" Width="200" FontSize="18" EditMode="Dropdown"/>
    </StackPanel>
</UserControl>
